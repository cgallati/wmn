# Database configuration
# Set USE_LOCAL_DB=true to use local SQLite file instead of Turso
USE_LOCAL_DB=false
DATABASE_URI=libsql://your-database-url.turso.io
DATABASE_AUTH_TOKEN=your-turso-auth-token

# Used to encrypt JWT tokens
PAYLOAD_SECRET=YOUR_SECRET_HERE

# Used to configure CORS, format links and more. No trailing slash
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Secret used to authenticate cron jobs
CRON_SECRET=YOUR_CRON_SECRET_HERE

# Used to validate preview requests
PREVIEW_SECRET=YOUR_SECRET_HERE

# Stripe configuration
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Storage configuration  
# Set USE_LOCAL_STORAGE=true to use local file storage instead of Vercel Blob
USE_LOCAL_STORAGE=false
# Vercel Blob Storage (for media uploads in production)
BLOB_READ_WRITE_TOKEN=your-vercel-blob-token

# Vercel Deploy Hook for automatic redeployment
VERCEL_DEPLOY_HOOK_URL=https://api.vercel.com/v1/integrations/deploy/your-deploy-hook-url
