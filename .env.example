# ==============================================
# PAYLOAD CMS CORE
# ==============================================

# Payload secret key (32-char hex string)
# Generate with: openssl rand -hex 32
PAYLOAD_SECRET=your-payload-secret-here

# MongoDB database connection
DATABASE_URI=mongodb://127.0.0.1/wmn-dev

# ==============================================
# SERVER URLS
# ==============================================

# Public server URL (used for CORS, links, etc.)
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Payload admin URL (usually same as NEXT_PUBLIC_SERVER_URL)
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000

# ==============================================
# PREVIEW & DRAFTS
# ==============================================

# Secret for preview/draft mode
PREVIEW_SECRET=demo-draft-secret

# ==============================================
# BRANDING (Optional)
# ==============================================

COMPANY_NAME="Payload Inc."
SITE_NAME="Payload Commerce"
TWITTER_CREATOR="@payloadcms"
TWITTER_SITE="https://nextjs.org/commerce"

# ==============================================
# STRIPE PAYMENT PROCESSING
# ==============================================

STRIPE_SECRET_KEY=sk_test_
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_
STRIPE_WEBHOOKS_SIGNING_SECRET=whsec_

